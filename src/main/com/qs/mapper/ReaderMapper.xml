<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qs.mybatis.mapper.ReaderMapper">

    <!--  读者注册  -->
    <insert id="register" parameterType="entity.Reader" keyProperty="id">
        INSERT INTO t_reader(readerId,
                             readerName,
                             sex,
                             registerTime,
                             isDel,
                             modifyTime)
        VALUES(#{readerId},
               #{readerName},
               #{sex},
               #{registerTime},
               #{isDel},
               #{modifyTime})
    </insert>

    <insert id="registerPass" parameterType="entity.ID_pass">
        insert into t_id_pass(readerId,
                              readerPass,
                              modifyTime,
                              createTime)
        values(#{readerId},
               #{readerPass},
               #{modifyTime},
               #{createTime});
    </insert>


</mapper>